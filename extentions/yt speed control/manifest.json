{
  "manifest_version": 3,
  "name": "YouTube Speed Control",
  "version": "1.0",
  "description": "Adjust YouTube video playback speed with keyboard shortcuts.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "increase-speed": {
      "description": "Increase playback speed by 0.25"
    },
    "decrease-speed": {
      "description": "Decrease playback speed by 0.25"
    }
  }
}
